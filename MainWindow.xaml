                                    </Button>
                                    <Button Width="80" Margin="10,0,0,0" Click="btn_ModifierPatient">
                                        <Button.Background>
                                            <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                                <GradientStop Color="#FFF3F3F3" Offset="0"/>
                                                <GradientStop Color="#FF89BDE2" Offset="0.927"/>
                                                <GradientStop Color="#FFC3E0F3" Offset="0.117"/>
                                                <GradientStop Color="#FF79ABD0" Offset="0.053"/>
                                            </LinearGradientBrush>
                                        </Button.Background>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <Image Grid.Row="0" Source="Images\Modifier Patient.png" Width="Auto" VerticalAlignment="Top" Margin="10,0,10,0"/>
                                            <TextBlock Grid.Row="1"  Text="Modifier Patient" Foreground="#FF3677A3" HorizontalAlignment="Center" TextAlignment="Center" Width="74" FontWeight="Bold" FontSize="9">
                                                <TextBlock.Background>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <GradientStop Color="#FF7CADD2" Offset="0"/>
                                                        <GradientStop Color="#FFB9E3FC" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </TextBlock.Background>
                                            </TextBlock>
                                        </Grid>
                                    </Button>
                                    <Button Click="btn_EnregistrerPatient" Width="81" Margin="10,0,0,0">
                                        <Button.Background>
                                            <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                                <GradientStop Color="#FFF3F3F3" Offset="0"/>
                                                <GradientStop Color="#FF89BDE2" Offset="0.927"/>
                                                <GradientStop Color="#FFC3E0F3" Offset="0.117"/>
                                                <GradientStop Color="#FF79ABD0" Offset="0.053"/>
                                            </LinearGradientBrush>
                                        </Button.Background>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <Image Grid.Row="0" Source="Images\Enregistrer.png" Width="Auto" VerticalAlignment="Top" Margin="10,5,10,0" Height="44"/>
                                            <TextBlock Grid.Row="1"  Text="Enregistrer Patient" Foreground="#FF3677A3" HorizontalAlignment="Center" TextAlignment="Center" Width="78" FontWeight="Bold" FontSize="8.5">
                                                <TextBlock.Background>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <GradientStop Color="#FF7CADD2" Offset="0"/>
                                                        <GradientStop Color="#FFB9E3FC" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </TextBlock.Background>
                                            </TextBlock>
                                        </Grid>
                                    </Button>
                                    <Button Click="btn_SupprimerPatient" Width="80" Margin="10,0,0,0">
                                        <Button.Background>
                                            <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                                <GradientStop Color="#FFF3F3F3" Offset="0"/>
                                                <GradientStop Color="#FF89BDE2" Offset="0.927"/>
                                                <GradientStop Color="#FFC3E0F3" Offset="0.117"/>
                                                <GradientStop Color="#FF79ABD0" Offset="0.053"/>
                                            </LinearGradientBrush>
                                        </Button.Background>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <Image Grid.Row="0" Source="Images\Supprimer Patient.png" Width="50" Height="50" VerticalAlignment="Top" Margin="10,0,10,0"/>
                                            <TextBlock Grid.Row="1"  Text="Supprimer Patient" Foreground="#FF3677A3" HorizontalAlignment="Center" TextAlignment="Center" Width="74" FontWeight="Bold" FontSize="9">
                                                <TextBlock.Background>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <GradientStop Color="#FF7CADD2" Offset="0"/>
                                                        <GradientStop Color="#FFB9E3FC" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </TextBlock.Background>
                                            </TextBlock>
                                        </Grid>
                                    </Button>

                                </StackPanel>
                            </Grid>
                        </Grid>




                    </Grid>

