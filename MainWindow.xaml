                                            <GradientStop Color="#FF2878B5" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="CHERCHER" Foreground="White" Margin="5,0,0,0" FontWeight="Bold">

                                    </TextBlock>
                                </Border>
                                <Grid Grid.Row="1" Background="#FFD3EEFF" OpacityMask="Black" >
